<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.dbc.javafxlessonone.controller.HelloController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="8.0">
      <Label text="Stage Modality Options" />
      <Button mnemonicParsing="false" text="Modality.NONE" />
      <Button mnemonicParsing="false" text="Modality.APPLICATION_MODAL" />
      <Button mnemonicParsing="false" text="Modality.WINDOW_MODAL" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="8.0">
      <Label text="Stage Styles" />
      <Button mnemonicParsing="false" text="StageStyle.DECORATED" />
      <Button mnemonicParsing="false" text="StageStyle.UNDECORATED" />
      <Button mnemonicParsing="false" text="StageStyle.TRANSPARENT" />
      <Button mnemonicParsing="false" text="StageStyle.UTILITY" />
      <Button mnemonicParsing="false" text="StageStyle.UNIFIED" />
   </HBox>
</VBox>
